<div class="container">
  <h2>{{title}}</h2>
  <br>
  <div class="flex-box book-box">
    <div id="thumbnail"></div>
    <div class="book-content">
      <h3>Description:</h3>
      <p>{{description}}</p>
      <h3>Author:</h3>
      <p><span>{{author}}</span></p>
      <h3>Price:</h3>
      <p><span>${{price}}</span></p>
      <p>
        <address>
            <a href="mailto:{{user.email}}"><button class="btn btn-primary">Contact Seller</button></a>
        </address>
      </p>
    </div>
 </div>
